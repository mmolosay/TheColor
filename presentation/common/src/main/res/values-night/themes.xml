<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TheColor" parent="Base.Theme.TheColor">
        <!-- colors theme -->
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorSecondary">@color/robin_egg</item>
        <item name="colorSecondaryVariant">@color/dark_cyan</item>

        <!-- colors on -->
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/black</item>

        <!-- colors background -->
        <item name="android:colorBackground">@color/cod_gray</item>
        <item name="android:colorBackgroundFloating">@color/black</item>
        <item name="colorSurface">@color/raisin</item>
        <item name="colorError">@color/cinnamon_satin</item>

        <!-- window -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

</resources>